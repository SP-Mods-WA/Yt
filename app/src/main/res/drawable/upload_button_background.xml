<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/upload_button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Gradient Border (Outer Layer) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:angle="45"
                android:startColor="#00F5FF"
                android:centerColor="#FF00E5"
                android:endColor="#00F5FF"
                android:type="linear"/>
            <size 
                android:width="56dp"
                android:height="36dp"/>
        </shape>
    </item>
    
    <!-- Inner Black Background -->
    <item 
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#000000"/>
        </shape>
    </item>
    
</layer-list>
