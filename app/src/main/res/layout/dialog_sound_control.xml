<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_sound_control.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#282828"
        android:padding="12dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/statusDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/status_dot_inactive" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sound Control"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-medium" />

        <Switch
            android:id="@+id/toggleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Visualizer Placeholder -->
    <View
        android:id="@+id/visualizer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="12dp"
        android:background="#181818" />

    <!-- ScrollView for controls -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="450dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Volume Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#282828"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:radius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”Š Volume"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/volumeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="100" />
            </LinearLayout>

            <!-- Bass Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#282828"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽšï¸ Bass"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bassValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 dB"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="24"
                    android:progress="12" />
            </LinearLayout>

            <!-- Treble Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#282828"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¼ Treble"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/trebleValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 dB"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekTreble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="24"
                    android:progress="12" />
            </LinearLayout>

            <!-- Balance Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#282828"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš–ï¸ Balance"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/balanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Center"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progress="100" />
            </LinearLayout>

            <!-- Equalizer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#282828"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ›ï¸ Equalizer"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="6dp">

                    <!-- EQ Band 60Hz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq60"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270"
                            android:transformPivotX="0dp"
                            android:transformPivotY="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60Hz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 170Hz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq170"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="170Hz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 310Hz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq310"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="310Hz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 600Hz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq600"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="600Hz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 1kHz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq1k"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1kHz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 3kHz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq3k"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3kHz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 6kHz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq6k"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6kHz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- EQ Band 12kHz -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <SeekBar
                            android:id="@+id/eq12k"
                            android:layout_width="3dp"
                            android:layout_height="60dp"
                            android:max="24"
                            android:progress="12"
                            android:rotation="270" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12kHz"
                            android:textColor="#AAAAAA"
                            android:textSize="8sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Preset Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btnFlat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="3dp"
                    android:text="âšª Flat"
                    android:textColor="#FFFFFF"
                    android:background="#282828"
                    android:textSize="12sp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnBass"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:text="ðŸ”Š Bass Boost"
                    android:textColor="#FFFFFF"
                    android:background="#282828"
                    android:textSize="12sp"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnVocal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="3dp"
                    android:text="ðŸŽ¤ Vocal"
                    android:textColor="#FFFFFF"
                    android:background="#282828"
                    android:textSize="12sp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnRock"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:text="ðŸŽ¸ Rock"
                    android:textColor="#FFFFFF"
                    android:background="#282828"
                    android:textSize="12sp"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Real-time audio control for YouTube"
        android:textColor="#AAAAAA"
        android:textSize="10sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="#181818" />

</LinearLayout>
