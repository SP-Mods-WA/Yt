<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0f0f0f">
    
    <!-- Header -->
    <RelativeLayout
        android:id="@+id/youHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ff0f0f0f"
        android:paddingLeft="4dp"
        android:paddingRight="16dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true">
        
        <ImageView
            android:id="@+id/youBackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            android:tint="#ffffffff"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/youBackButton"
            android:layout_marginLeft="8dp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/youSearchButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_search"
                android:padding="12dp"
                android:tint="#ffffffff"
                android:contentDescription="Search"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
            
            <ImageView
                android:id="@+id/youMoreButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_more_vert"
                android:padding="12dp"
                android:tint="#ffffffff"
                android:contentDescription="More"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
    </RelativeLayout>
    
    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/youHeader"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Profile Section -->
            <LinearLayout
                android:id="@+id/profileSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">
                    
                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_account_circle"
                        android:tint="#ffaaaaaa"
                        android:contentDescription="Profile" />
                </RelativeLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    
                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not signed in"
                        android:textColor="#ffaaaaaa"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View your channel"
                        android:textColor="#ff3ea6ff"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="#ffffffff"
                    android:contentDescription="Go" />
            </LinearLayout>
            
            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff3f3f3f"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
            
            <!-- Menu Items -->
            
            <!-- History -->
            <LinearLayout
                android:id="@+id/menuHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    android:tint="#ffffffff"
                    android:contentDescription="History" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="History"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Playlists -->
            <LinearLayout
                android:id="@+id/menuPlaylists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_playlist"
                    android:tint="#ffffffff"
                    android:contentDescription="Playlists" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Playlists"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Your videos -->
            <LinearLayout
                android:id="@+id/menuYourVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_video"
                    android:tint="#ffffffff"
                    android:contentDescription="Your videos" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your videos"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Watch later -->
            <LinearLayout
                android:id="@+id/menuWatchLater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_watch_later"
                    android:tint="#ffffffff"
                    android:contentDescription="Watch later" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Watch later"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Liked videos -->
            <LinearLayout
                android:id="@+id/menuLiked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_thumb_up"
                    android:tint="#ffffffff"
                    android:contentDescription="Liked videos" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Liked videos"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Downloads -->
            <LinearLayout
                android:id="@+id/menuDownloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_download"
                    android:tint="#ffffffff"
                    android:contentDescription="Downloads" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Downloads"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff3f3f3f"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
            
            <!-- Get YouTube Premium -->
            <LinearLayout
                android:id="@+id/menuPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_premium"
                    android:tint="#ffffffff"
                    android:contentDescription="Premium" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Get YouTube Premium"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff3f3f3f"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
            
            <!-- Settings -->
            <LinearLayout
                android:id="@+id/menuSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:tint="#ffffffff"
                    android:contentDescription="Settings" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Help & feedback -->
            <LinearLayout
                android:id="@+id/menuHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_help"
                    android:tint="#ffffffff"
                    android:contentDescription="Help" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Help &amp; feedback"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:layout_marginLeft="24dp" />
            </LinearLayout>
            
            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>
