<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    android:fitsSystemWindows="false">

    <!-- âœ… Custom Header (MUST be visible) -->
    <RelativeLayout
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#FF0000"
        android:elevation="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- YouTube Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_spyt_logo"
            android:scaleType="fitCenter"
            android:contentDescription="Logo"/>

        <!-- Right Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconCast"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_cast"
                android:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">
                
                <ImageView
                    android:id="@+id/iconNotifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="#FFFFFF"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                
                <TextView
                    android:id="@+id/notificationBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/notification_badge_bg"
                    android:visibility="gone"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

    </RelativeLayout>

    <!-- Search Bar -->
    <RelativeLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#0F0F0F"
        android:elevation="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/searchBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/searchBackButton"
            android:layout_marginStart="8dp"
            android:background="@drawable/search_bg"
            android:hint="Search"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"/>
    </RelativeLayout>

    <!-- WebView -->
    <com.spmods.ytpro.YTProWebview
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/customHeader"
        android:layout_above="@id/bottomNavBar"
        android:background="#000000"/>

    <!-- Bottom Nav -->
    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
