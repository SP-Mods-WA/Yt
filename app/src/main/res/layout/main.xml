<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Premium Floating Controls -->
    <LinearLayout
        android:id="@+id/premiumOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="8dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/overlayPip"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_pip"
                android:layout_margin="4dp"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/overlayDownload"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_download"
                android:layout_margin="4dp"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/overlaySpeed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_speed"
                android:layout_margin="4dp"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/overlayQuality"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_quality"
                android:layout_margin="4dp"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/overlayClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- WebView -->
    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:background="#000000"/>

    <!-- Premium Floating Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_above="@+id/bottomNavigation"
        android:orientation="vertical"
        android:gravity="end">

        <ImageView
            android:id="@+id/pipButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_pip"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_floating"
            android:contentDescription="PIP"/>

        <ImageView
            android:id="@+id/downloadButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_download"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_floating"
            android:contentDescription="Download"/>

        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_settings"
            android:background="@drawable/btn_floating"
            android:contentDescription="Settings"/>
    </LinearLayout>

    <!-- Bottom Navigation (included from separate file) -->
    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>