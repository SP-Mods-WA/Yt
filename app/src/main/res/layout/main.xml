<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#0F0F0F"
    android:layout_height="match_parent">

     <!-- ðŸŽ¨ Custom Header -->
    <RelativeLayout
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0F0F0F"
        android:elevation="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- YouTube Logo Text -->
        <TextView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="YouTube"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <!-- Right Icons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Cast Icon -->
            <ImageView
                android:id="@+id/iconCast"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_cast"
                android:tint="#FFFFFF"
                android:contentDescription="Cast"
                android:padding="2dp"/>

            <!-- Notifications Icon -->
            <ImageView
                android:id="@+id/iconNotifications"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF"
                android:contentDescription="Notifications"
                android:padding="2dp"/>

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"
                android:contentDescription="Search"
                android:padding="2dp"/>

            <!-- Profile Icon -->
            <ImageView
        android:id="@+id/iconSettings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_settings"
        android:tint="#FFFFFF"
        android:contentDescription="Settings"
        android:padding="2dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/searchBarContainer"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_below="@id/customHeader"
    android:background="#0F0F0F"
    android:elevation="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="gone">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/searchBackButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_back"
        android:tint="#FFFFFF"
        android:contentDescription="Back"/>

    <!-- Search Input -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/searchBackButton"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_bg"
        android:hint="Search YouTube"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:singleLine="true"
        android:imeOptions="actionSearch"/>

</RelativeLayout>
    

    <com.spmods.ytpro.YTProWebview
        android:id="@+id/web"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_above="@+id/bottomNavBar"/>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <!-- âœ…âœ…âœ… à¶¸à·™à¶­à¶±à·’à¶±à·Š à¶´à¶§à¶±à·Š à¶œà¶±à·Šà¶± - YouTube IFrame Player âœ…âœ…âœ… -->
    
    <RelativeLayout
        android:id="@+id/customYouTubePlayerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:elevation="200dp">
        
        <!-- YouTube IFrame WebView -->
        <WebView
            android:id="@+id/youtubeIframePlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/customYouTubeControls"
            android:background="#000000"/>
        
        <!-- Video Title Bar (Top) -->
        <LinearLayout
            android:id="@+id/youtubeTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#DD000000"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            
            <!-- Back/Close Button -->
            <ImageView
                android:id="@+id/btnCloseYouTube"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF"
                android:layout_marginEnd="12dp"/>
            
            <!-- Video Title -->
            <TextView
                android:id="@+id/youtubeVideoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loading..."
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
        
        <!-- Custom Controls Bar (Bottom) -->
        <LinearLayout
            android:id="@+id/customYouTubeControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#DD000000"
            android:orientation="vertical"
            android:padding="16dp">
            
            <!-- Time Display -->
            <TextView
                android:id="@+id/youtubeTimeDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0:00 / 0:00"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>
            
            <!-- Progress SeekBar -->
            <SeekBar
                android:id="@+id/youtubeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="#FF0000"
                android:thumbTint="#FF0000"
                android:layout_marginBottom="16dp"/>
            
            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                
                <!-- Previous Button -->
                <ImageView
                    android:id="@+id/btnPrevious"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="32dp"
                    android:padding="4dp"/>
                
                <!-- Play/Pause Button -->
                <ImageView
                    android:id="@+id/btnYouTubePlayPause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="32dp"/>
                
                <!-- Next Button -->
                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_media_next"
                    android:tint="#FFFFFF"
                    android:padding="4dp"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/youtubeLoadingIndicator"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="#FF0000"
            android:visibility="visible"/>
    </RelativeLayout>
    
    <!-- âœ…âœ…âœ… à¶¸à·™à¶­à¶± à¶…à·€à·ƒà¶±à·Š - YouTube IFrame Player âœ…âœ…âœ… -->

</RelativeLayout>