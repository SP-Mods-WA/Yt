<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    android:fitsSystemWindows="false"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- ✅ Custom Header -->
    <RelativeLayout
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#0F0F0F"
        android:elevation="4dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- ✅ Logo Container (Left side with proper centering) -->
        <RelativeLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_spyt_logo"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="YouTube"/>
        </RelativeLayout>

        <!-- ✅ Right Icons Container (Properly aligned) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Cast Icon -->
            <ImageView
                android:id="@+id/iconCast"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_cast"
                android:tint="#FFFFFF"
                android:contentDescription="Cast"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- Notifications Icon with Badge -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Bell Icon -->
                <ImageView
                    android:id="@+id/iconNotifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="#FFFFFF"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notifications"/>

                <!-- Notification Badge -->
                <TextView
                    android:id="@+id/notificationBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/notification_badge_bg"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"
                android:contentDescription="Search"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF"
                android:contentDescription="Settings"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </RelativeLayout>

    <!-- ✅ Search Bar Container (Hidden by default, positioned OVER header) -->
    <RelativeLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#0F0F0F"
        android:elevation="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/searchBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"/>

        <!-- Search Input -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/searchBackButton"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/search_bg"
            android:hint="Search YouTube"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"/>

    </RelativeLayout>

    <!-- ✅ WebView - MUST be below header -->
    <com.spmods.ytpro.YTProWebview
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/customHeader"
        android:layout_above="@id/bottomNavigation"
        android:background="#000000"/>

    <!-- ✅ Bottom Navigation -->
    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
