<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#0F0F0F"
    android:layout_height="match_parent">

     <!-- ðŸŽ¨ Custom Header -->
    <RelativeLayout
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0F0F0F"
        android:elevation="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- YouTube Logo Text -->
        <TextView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="YouTube"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <!-- Right Icons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Cast Icon -->
            <ImageView
                android:id="@+id/iconCast"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_cast"
                android:tint="#FFFFFF"
                android:contentDescription="Cast"
                android:padding="2dp"/>

            <!-- Notifications Icon -->
            <ImageView
                android:id="@+id/iconNotifications"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF"
                android:contentDescription="Notifications"
                android:padding="2dp"/>

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"
                android:contentDescription="Search"
                android:padding="2dp"/>

            <!-- Profile Icon -->
            <ImageView
        android:id="@+id/iconSettings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_settings"
        android:tint="#FFFFFF"
        android:contentDescription="Settings"
        android:padding="2dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/searchBarContainer"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_below="@id/customHeader"
    android:background="#0F0F0F"
    android:elevation="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="gone">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/searchBackButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_back"
        android:tint="#FFFFFF"
        android:contentDescription="Back"/>

    <!-- Search Input -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/searchBackButton"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_bg"
        android:hint="Search YouTube"
        android:textColorHint="#AAAAAA"
        android:textColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:singleLine="true"
        android:imeOptions="actionSearch"/>

</RelativeLayout>
    <View
        android:id="@+id/headerSpacer"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/customHeader"
        android:background="#282828"/>

    <com.spmods.ytpro.YTProWebview
        android:id="@+id/web"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_below="@+id/customHeader"
        android:layout_above="@+id/bottomNavBar"/>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

