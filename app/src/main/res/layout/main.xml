<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#0F0F0F"
    android:id="@+id/rootLayout"
    android:fitsSystemWindows="false"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

     <!-- ðŸŽ¨ Custom Header -->
    <RelativeLayout
        android:id="@+id/customHeader"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0F0F0F"
        android:elevation="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- YouTube Logo Text -->
        

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_spyt_logo"
            android:scaleType="fitStart"
            android:contentDescription="YouTube"/>

        <!-- Right Icons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Cast Icon -->
            <ImageView
                android:id="@+id/iconCast"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_cast"
                android:tint="#FFFFFF"
                android:contentDescription="Cast"
                android:padding="2dp"/>

            <!-- Notifications Icon -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:padding="2dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Bell Icon -->
                <ImageView
                    android:id="@+id/iconNotifications"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="#FFFFFF"
                    android:contentDescription="Notifications"/>

                <!-- Badge -->
                <TextView
                    android:id="@+id/notificationBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end|top"
                    android:translationX="4dp"
                    android:translationY="-4dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/notification_badge_bg"/>
            </FrameLayout>


            <!-- Search Icon -->
            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_search"
                android:tint="#FFFFFF"
                android:contentDescription="Search"
                android:padding="2dp"/>

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF"
                android:contentDescription="Settings"
                android:padding="2dp"/>

        </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
        android:id="@+id/searchBarContainer"
        android:background="#ff0f0f0f"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:translationZ="8dp"
        android:elevation="8dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/searchBackButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:contentDescription="Back"/>

        <!-- Search Input -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/searchBackButton"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/search_bg"
            android:hint="Search YouTube"
            android:textColorHint="#AAAAAA"
            android:textColor="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"/>

    </RelativeLayout>
    

    <com.spmods.ytpro.YTProWebview
        android:id="@+id/web"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent"
        android:background="#000000"
        
        android:layout_above="@+id/bottomNavBar"/>

    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
