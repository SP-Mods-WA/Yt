<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavBar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="#0F0F0F"
    android:elevation="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_alignParentBottom="true">

    <!-- Home Button -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        
        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:tint="#FFFFFF"/>
        
        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Shorts Button -->
    <LinearLayout
        android:id="@+id/navShorts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        
        <ImageView
            android:id="@+id/iconShorts"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shorts"
            android:tint="#AAAAAA"/>
        
        <TextView
            android:id="@+id/textShorts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shorts"
            android:textSize="10sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Upload Button (Plus Icon) -->
    <LinearLayout
        android:id="@+id/navUpload"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        
        <ImageView
            android:id="@+id/iconUpload"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_upload"
            android:tint="#AAAAAA"/>
        
        <TextView
            android:id="@+id/textUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="2dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Subscriptions Button -->
    <LinearLayout
        android:id="@+id/navSubscriptions"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        
        <ImageView
            android:id="@+id/iconSubscriptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_subscriptions"
            android:tint="#AAAAAA"/>
        
        <TextView
            android:id="@+id/textSubscriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscriptions"
            android:textSize="10sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- You Button -->
    <LinearLayout
        android:id="@+id/navYou"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">
        
        <ImageView
            android:id="@+id/iconYou"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_you"
            android:tint="#AAAAAA"/>
        
        <TextView
            android:id="@+id/textYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="10sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>
