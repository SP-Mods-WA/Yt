<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Gradient Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:padding="24dp">

        <!-- Update Icon -->
        <ImageView
            android:id="@+id/iconUpdate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_update"
            android:background="@drawable/icon_circle_bg"
            android:padding="14dp"
            android:tint="@android:color/white"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvUpdateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconUpdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Update Available!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Version Tag -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/version_tag_bg"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/dot_blink"/>

            <TextView
                android:id="@+id/tvUpdateVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="V3.5.0 READY"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#a78bfa"/>

        </LinearLayout>

        <!-- Message -->
        <TextView
            android:id="@+id/tvUpdateMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New features and improvements are ready to download."
            android:textSize="14sp"
            android:textColor="#b0b0b0"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp"/>

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_row_bg"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:weightSum="3">

            <!-- Size -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48MB"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIZE"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Features -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEATURES"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textSize="10sp"
                    android:textColor="#808080"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Features List -->
        <LinearLayout
            android:id="@+id/featuresContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/feature_icon_bg"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Enhanced video quality"
                    android:textSize="13sp"
                    android:textColor="#d0d0d0"/>

            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/feature_icon_bg"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Smart download manager"
                    android:textSize="13sp"
                    android:textColor="#d0d0d0"/>

            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/feature_icon_bg"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="Improved performance"
                    android:textSize="13sp"
                    android:textColor="#d0d0d0"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Now"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/btn_update"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnLater"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Later"
                android:textColor="#9CA3AF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/btn_later"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
