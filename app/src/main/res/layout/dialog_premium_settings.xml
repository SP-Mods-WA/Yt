<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sponsor Block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sponsor Block"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

        <!-- Return Dislike -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Return Dislike Count"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchDislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

        <!-- Auto Skip Ads -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto Skip Ads"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

        <!-- Hide Comments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hide Comments"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

        <!-- Theater Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theater Mode"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchTheater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

        <!-- AMOLED Dark Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AMOLED Dark Mode"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchAmoled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

        <!-- Playback Speed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playback Speed Control"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#444444"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>